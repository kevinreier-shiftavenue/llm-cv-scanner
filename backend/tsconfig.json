{
  "compilerOptions": {
      "target": "es2022",
      "lib": ["es2022"],
      "module": "CommonJS",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "typeRoots": ["types", "node_modules/@types", "node"],
      "baseUrl": "src/",
      "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "<node_internals>/**"],
  "ts-node": {
      "files": true
  }
}
